<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_active_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cazza223.mhealthapp.ActiveDataActivity">

    <TextView
        android:text="Enter Active Data for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/tv_activeMessage"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24sp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_diastolic_ACC"
        android:layout_width="150dp"
        android:textAlignment="viewStart"
        android:hint="BP Diastolic"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/et_systolic_ACC"
        android:layout_alignBottom="@+id/et_systolic_ACC"
        android:layout_alignLeft="@+id/et_HR_ACC"
        android:layout_alignStart="@+id/et_HR_ACC" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="29dp"
        android:id="@+id/et_BS_ACC"
        android:layout_width="150dp"
        android:textAlignment="viewStart"
        android:hint="Blood Sugar"
        android:textSize="18sp"
        android:layout_below="@+id/tv_activeMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="number" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_HR_ACC"
        android:layout_width="150dp"
        android:textAlignment="viewStart"
        android:hint="Heart Rate"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/et_BS_ACC"
        android:layout_alignBottom="@+id/et_BS_ACC"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="number" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_systolic_ACC"
        android:layout_width="150dp"
        android:textAlignment="viewStart"
        android:hint="BP Systolic"
        android:textSize="18sp"
        android:layout_below="@+id/et_BS_ACC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:inputType="number" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_accel_x"
        android:hint="X Value"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/et_systolic_ACC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:layout_toLeftOf="@+id/tv_activeMessage"
        android:layout_toStartOf="@+id/tv_activeMessage"
        android:layout_width="110dp"
        android:inputType="number" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_accel_y"
        android:hint="Y Value"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:layout_alignBaseline="@+id/et_accel_x"
        android:layout_alignBottom="@+id/et_accel_x"
        android:layout_centerHorizontal="true"
        android:layout_width="90dp"
        android:inputType="number" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_accel_z"
        android:hint="Z Value"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:layout_width="110dp"
        android:layout_alignBaseline="@+id/et_accel_y"
        android:layout_alignBottom="@+id/et_accel_y"
        android:layout_toRightOf="@+id/et_accel_y"
        android:layout_toEndOf="@+id/et_accel_y"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:inputType="number" />

    <Button
        android:text="Submit Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/bSubmitActive"
        android:layout_below="@+id/et_accel_y"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
