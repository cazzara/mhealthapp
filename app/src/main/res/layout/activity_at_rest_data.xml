<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_at_rest_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cazza223.mhealthapp.AtRestDataActivity">

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_BS_AR"
        android:hint="Blood Sugar"
        android:layout_width="150dp"
        android:layout_alignBaseline="@+id/et_HR_AR"
        android:layout_alignBottom="@+id/et_HR_AR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="27dp"
        android:id="@+id/et_HR_AR"
        android:hint="Heart Rate"
        android:layout_width="150dp"
        android:layout_below="@+id/tv_restMessage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:inputType="number" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_diastolic_AR"
        android:hint="BP Diastolic"
        android:layout_width="150dp"
        android:layout_alignBaseline="@+id/et_systolic_AR"
        android:layout_alignBottom="@+id/et_systolic_AR"
        android:layout_alignLeft="@+id/et_HR_AR"
        android:layout_alignStart="@+id/et_HR_AR"
        android:inputType="number" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_accel_x"
        android:hint="X Value"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/et_systolic_AR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:layout_toLeftOf="@+id/tv_restMessage"
        android:layout_toStartOf="@+id/tv_restMessage"
        android:layout_width="110dp"
        android:inputType="number" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_accel_z"
        android:hint="Z Value"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:layout_alignBaseline="@+id/et_accel_y"
        android:layout_alignBottom="@+id/et_accel_y"
        android:layout_alignRight="@+id/et_diastolic_AR"
        android:layout_alignEnd="@+id/et_diastolic_AR"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_width="100dp"
        android:inputType="number" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_accel_y"
        android:hint="Y Value"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:layout_alignBaseline="@+id/et_accel_x"
        android:layout_alignBottom="@+id/et_accel_x"
        android:layout_toLeftOf="@+id/et_diastolic_AR"
        android:layout_toStartOf="@+id/et_diastolic_AR"
        android:layout_width="90dp"
        android:inputType="number" />

    <TextView
        android:text="Enter Resting Data for"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/tv_restMessage"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <EditText
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_systolic_AR"
        android:hint="BP Systolic"
        android:layout_width="150dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/et_BS_AR"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="number" />

    <Button
        android:text="Submit Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/bSubmitResting"
        android:layout_below="@+id/et_accel_z"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
